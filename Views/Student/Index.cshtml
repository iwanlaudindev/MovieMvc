@model IEnumerable<Student>

@{
    ViewData["Title"] = "Daftar Siswa";
}

<h2>Daftar Siswa</h2>

<p>
    <a asp-action="Create">Tambah Siswa Baru</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Age</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var student in Model)
    {
        <tr>
            <td>@student.Name</td>
            <td>@student.Email</td>
            <td>@student.Age</td>
            <td>
                <a asp-action="Details" class="btn btn-primary" asp-route-id="@student.Id">Details</a>
                <a asp-action="Edit" class="btn btn-secondary" asp-route-id="@student.Id">Edit</a>
                <form asp-action="Delete" asp-route-id="@student.Id" method="post">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>